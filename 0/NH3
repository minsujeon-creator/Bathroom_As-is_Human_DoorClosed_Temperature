FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      NH3;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -3 0 0 0 0 0];
internalField   uniform 0;
boundaryField
{
    // SOLIDS: no normal flux
    walls    { type zeroGradient; }
    room   { type zeroGradient; }
    human  { type zeroGradient; }

    // OOUTLET: vent
    vent
    {
        type        inletOutlet;
        inletValue  uniform 0;
        value       uniform 0;
    }

    // INLET: zero coming in; convect out
    door
    {
        type        inletOutlet;
        inletValue  uniform 0;
        value       uniform 0;
    }

    

    // SOLIDS: no normal flux
    poo    { type zeroGradient; }
}
