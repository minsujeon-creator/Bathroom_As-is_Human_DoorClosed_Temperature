FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    walls
    {
        type            nutkWallFunction;
        value           uniform 0;
    }

    room
    {
        type            nutkWallFunction;
        value           uniform 0;
    }

    human
    {
        type            nutkWallFunction;
        value           uniform 0;
    }
    vent
    {
        type            zeroGradient;
    }
    door
    {
        type            fixedValue;
        value           uniform 1e-5;  // no turbulence on walls
    }
    poo
    {
        type            nutkWallFunction;
        value           uniform 0;
    }
}

